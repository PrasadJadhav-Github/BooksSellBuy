<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ImageView for the book cover -->
        <ImageView
            android:id="@+id/imageViewBookCover"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            />

        <!-- EditText for the book name -->
        <EditText
            android:id="@+id/editTextBookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Book Name"
            android:textSize="18sp" />

        <!-- EditText for the book price -->
        <EditText
            android:id="@+id/editTextBookPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Book Price"
            android:inputType="numberDecimal"
            android:textSize="16sp" />

        <!-- EditText for the book description -->
        <EditText
            android:id="@+id/editTextBookDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Book Description"
            android:textSize="16sp" />

        <!-- EditText for the book category -->
        <EditText
            android:id="@+id/editTextBookCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Book Category"
            android:textSize="16sp" />

        <!-- EditText for the book year -->
        <EditText
            android:id="@+id/editTextBookYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Book Year"
            android:inputType="number"
            android:textSize="16sp" />

        <!-- EditText for the mobile number -->
        <EditText
            android:id="@+id/editTextMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:textSize="16sp" />

        <!-- Button to submit the information -->
        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Add"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
